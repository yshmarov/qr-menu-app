<h1>
  <i class="fa-solid fa-list"></i>
  <%= t(".title") %>
</h1>

<header>
  <nav>
    <% @categories.each do |category| %>
      <%= active_link_to menu_path(category:) do %>
        <%= I18n.t("config.categories.#{category}") %>
      <% end %>
    <% end %>
    <%= link_to t(".all"), request.path if request.query_parameters.any? %>
  </nav>
</header>

<div id="menu" class="grid-cols-auto-fit">
  <% @products.each do |product| %>
    <%= render partial: "menu/product", locals: { product: product } %>
  <% end %>
</div>
