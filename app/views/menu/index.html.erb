<h1>
  <i class="fa-solid fa-list"></i>
  Menu
</h1>

<header>
  <nav>
    <% MenuItem.all.pluck(:menu_category).uniq.sort.each do |menu_category| %>
      <%= active_link_to menu_path(menu_category: menu_category) do %>
        <%= menu_category.capitalize %>
        <% end %>
    <% end %>
    <%= link_to "All", request.path if request.query_parameters.any? %>
  </nav>
</header>

<div id="menu" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 1rem;">
  <% @menu_items.each do |menu_item| %>
    <%= render partial: "menu/menu_item", locals:{ menu_item: menu_item } %>
  <% end %>
</div>
