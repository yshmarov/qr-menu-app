<h1>
  <i class="fa-solid fa-list"></i>
  <%= t(".title") %>
</h1>

<header>
  <nav>
    <% @categories.each do |category| %>
      <%= active_link_to products_path(category:) do %>
        <%= I18n.t("config.categories.#{category}") %>
      <% end %>
    <% end %>
    <%= link_to t(".all"), request.path if request.query_parameters.any? %>
  </nav>
</header>

<div id="shop" class="grid-cols-auto-fit">
  <%= render collection: @products, partial: "products/product", as: :product %>
</div>
