<article id="<%= dom_id product %>">
  <%= image_tag product.image_url, style: "max-width: 300px;" if product.image_url.present? %>

  <p>
    <strong>
      <%= product.name %>,
    </strong>
    <%= product.price / 100.to_d %>
    PLN
  </p>

  <p>
    Category:
    <%= product.menu_category %>
  </p>

  <%= link_to [:edit, :admin, product] do %>
    <i class="fa-solid fa-pencil"></i>
    Edit
  <% end %>
  <% if product.order_items.none? %>
    <%= button_to [:admin, product], method: :delete do %>
      <i class="fa-solid fa-trash"></i>
      Destroy
    <% end %>
  <% end %>
</article>
